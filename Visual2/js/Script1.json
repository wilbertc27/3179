{	
	"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
	"background":"lightyellow",
	"width": 1000,
	"height": 550,
  "projection": {"type": "equalEarth"},
  "layer":[{"data": {"url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
            				 "format": {"type": "topojson", "feature": "oceans"}},
             "mark": {"type": "geoshape", "fill": "#6cc6f0"}
            },

				    {"data": {"url": "https://raw.githubusercontent.com/wilbertc27/3179/main/3179_assignment_2_dataset/ne_110m.json",
								      "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}},
					"mark": {"type": "geoshape", "fill": "","stroke":"lightgray"}
            },

            {"data": {"url": "https://raw.githubusercontent.com/wilbertc27/3179/main/3179_assignment_2_dataset/ne_110m (1).json",
                      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}},
             "transform": [{"calculate": "'Data is not available in ' + datum.properties.NAME","as": "note"}],
             "mark": {"type": "geoshape", "fill": "lightgray","stroke":"white"},
             "encoding": {"tooltip": {"field": "note"}}
            },
				{
				"data": {
							"url": "https://raw.githubusercontent.com/wilbertc27/3179/main/3179_assignment_2_dataset/ne_110m (1).json",
							"format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
						},
                "transform":[
								{
									"lookup": "properties.NAME",
									"from": {
												"data": {"url": "https://raw.githubusercontent.com/wilbertc27/3179/main/Visual2/data/worldometer_data.csv"},
												"key": "Country/Region",
												"fields": ["TotalCases_1M_pop","TotalCases"]
											}
								},
								{
									"calculate": "datum.TotalCases_1M_pop", "as": "Total Cases per 1M population"
								}
							],
				"mark": {"type": "geoshape","stroke":"white"},
				"encoding": {
								"color": {
												"field": "Total Cases per 1M population",
												"type": "quantitative",
												"scale": {"type": "threshold",
                                                        "domain": [5000,10000,15000],
                                                        "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
												}
                                            },
								"tooltip": [
												{"field": "properties.NAME", "type": "nominal", "title":"Country"},
												{"field": "Total Cases per 1M population", "type": "quantitative"}
									
											]
								}
            	},
      {	
      "data": {
							"url": "https://raw.githubusercontent.com/wilbertc27/3179/main/3179_assignment_2_dataset/ne_110m (1).json",
							"format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
						},
			"transform": [
			  {
				"lookup": "properties.NAME",
				"from": {
				  "data": {"url": "https://raw.githubusercontent.com/wilbertc27/3179/main/Visual2/data/CountryInformation.csv"},
				  "key": "name",
				  "fields": ["latitude", "longitude"]
				}
			  }
			],
			"mark": {"type": "text",
				 "align": "center",
				 "baseline": "middle",
				 "fontSize": 13.5,
				 "fontStyle": "italic",
				 "color":"black",
				 "fontWeight":"bold"
				},
			"encoding": {
			  "longitude": {"field": "longitude", "type": "quantitative"},
			  "latitude": {"field": "latitude", "type": "quantitative"},
			  "text":{"field": "properties.NAME", "type": "nominal"},
			  "opacity": {
				"condition": {
				  "test": "datum['properties.NAME'] == 'Chile' || datum['properties.NAME'] == 'Brazil' || datum['properties.NAME'] == 'Peru' || datum['properties.NAME'] == 'Oman' ||  datum['properties.NAME'] == 'Qatar' ||  datum['properties.NAME'] == 'United States of America'",
				  "value": 1
				},
				"value": 0
			  }
			}
		  }
        ],
    "config": {"view": {"stroke": null},"legend":{"direction":"horizontal","orient":"bottom"}}
}
